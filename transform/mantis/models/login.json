{
  "type": "object",
  "comment": "Blank",
  "properties": {
    "username": {
      "type": "string",
      "control": "text",
      "selector": "input[name='username']"
    },
    "password": {
      "type": "string",
      "control": "text",
      "selector": "input[name='password']"
    },
    "submit": {
      "type": "action",
      "control": "action.click",
      "selector": "input[class='button']"
    },
    "errorMessage": {
      "type": "string"
    },
    "isLogin": {
      "type": "identifier",
      "control": "exists",
      "selector": "td"
    }
  },
  "id": "login",
  "connect": [
    {
      "match": [
        "isLogin"
      ],
      "event": "login"
    }
  ]
}
